<% name = entry[focus].name if !focus.nil? && !entry[focus].nil? %>
<% name = entry.project.name if @project.nil? or @projects and @project != entry.project %>
<% name = entry.user.name if @user.nil? %>

<li class="schedule_entry" style="<%= 'width: ' + (100*entry.hours/total).to_s + '%' %>">
    <div title='<%= "#{name} : " + ScheduleCompatibility::I18n.lwr(:label_f_hour, :value => entry.hours) %>' style="height: <%= 23*entry.hours %>px; <%= entry.style(@user.nil? ? entry.user.id : entry.project.id) %>">
        <%= link_to entry.project.name, :controller => 'schedules', :action => 'index', :date => entry.date, :project_id => entry.project, :user_id => nil if @project.nil? or @projects and @project != entry.project %>
        <% if @project.nil? or @projects and @project != entry.project and @user.nil? %><br/><% end %>
        <%= link_to entry.user.name.gsub(/[^A-Z]/, ''), :controller => 'schedules', :action => 'index', :date => entry.date, :user_id => entry.user.id, :project_id => nil if @user.nil? %>
    </div>
</li>
